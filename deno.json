{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "vite build",
    "preview": "vite preview",
    "fmt": "deno fmt --unstable-component && stylelint 'src/**/*.{vue,scss}' --fix"
  },
  "imports": {
    "@turf/distance": "npm:@turf/distance@^7.2.0",
    "@turf/helpers": "npm:@turf/helpers@^7.2.0",
    "@vueuse/core": "npm:@vueuse/core@^13.3.0",
    "sass-embedded": "npm:sass-embedded@^1.89.0",
    "stylelint-config-recess-order": "npm:stylelint-config-recess-order@^6.0.0",
    "stylelint-config-recommended-scss": "npm:stylelint-config-recommended-scss@^15.0.1",
    "stylelint-config-recommended-vue": "npm:stylelint-config-recommended-vue@^1.6.0",
    "stylelint-config-standard": "npm:stylelint-config-standard@^38.0.0",
    "vue": "npm:vue@^3.5.16"
  },
  "fmt": {
    "lineWidth": 100
  }
}
